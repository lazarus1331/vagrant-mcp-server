{
  "servers": {
    "vagrant": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "-v", "${workspaceFolder}:/vagrant-projects:rw",
        "-v", "/home/$USER/.vagrant.d:/app/.vagrant.d:rw",
        "--privileged",
        "--network", "host",
        "vagrant-mcp-server"
      ],
      "env": {
        "VAGRANT_PROJECTS_DIR": "/vagrant-projects",
        "VAGRANT_HOME": "/app/.vagrant.d"
      }
    }
  }
}